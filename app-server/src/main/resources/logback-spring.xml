<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

    <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
        <resetJUL>true</resetJUL>
    </contextListener>

    <shutdownHook class="ch.qos.logback.core.hook.DelayingShutdownHook"/>

    <springProfile name="dev,test">
        <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
            <withJansi>false</withJansi>
            <encoder>
                <pattern>
                    %cyan(%d{HH:mm:ss.SSS}) %gray([%thread]) %highlight(%-5level) %magenta(%-36logger{36}) - %msg%n
                </pattern>
            </encoder>
        </appender>

        <logger name="com.github.arhor.simple.expense.tracker" level="DEBUG"/>
    </springProfile>

    <springProfile name="heroku">
        <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
            <withJansi>false</withJansi>
            <encoder>
                <pattern>
                    %d{HH:mm:ss.SSS} [%thread] %-5level %-36logger{36} - %msg%n
                </pattern>
            </encoder>
        </appender>
    </springProfile>

    <root level="INFO">
        <appender-ref ref="console"/>
    </root>

</configuration>
